@model IEnumerable<EmpList>



<h2>Employee List</h2>

<div style="display: block">
    <a href="/EmpData/InsertEmpData/">Create new Employee</a>
</div>

@using (Html.BeginForm("Search", "EmpData", FormMethod.Get))
{
    <p>
        Find by name: @Html.TextBox("searchFor")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date Hire</th>
        <th>Email</th>
        <th>Employee Status</th>
        <th>Department</th>
        <th>Position</th>
        <th>Field</th>
    </tr>

    @foreach (var emp in Model)
    {
        <tr>
            <td><a href=/EmpData/ViewEmpData/@emp.EmpDataID>@emp.EmpDataID</a></td>
            <td>@emp.FName</td>
            <td>@emp.LName</td>
            <td>@emp.DateHire</td>
            <td>@emp.Email</td>
            <td>@emp.EmpStatID</td>
            <td>@emp.DeptID</td>
            <td>@emp.PositionID</td>
            <td>@emp.FieldID</td>
        </tr>

    }
</table>
